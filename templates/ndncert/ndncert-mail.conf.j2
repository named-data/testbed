[ndncert_smtp_settings]
SMTP_SERVER = {{ smtp_server }}
SMTP_PORT = 587
ENCRYPT_MODE = tls
SMTP_USER = {{ smtp_user }}
SMTP_PASSWORD = {{ smtp_password }}


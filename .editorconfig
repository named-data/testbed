root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{py,sh}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.{html,vue,yaml,yml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
